extends layout

block content
  div(class='row')
    div#board-container(class='col-md-9')
      div(class='jumbotron')
        p Game Board Goes Here
    div#message-container(class='col-md-3')
      div(class='row activity-log')
        div(class='message-list')
          ul#messages(class='list-unstyled')
            for message in messages
              li= message.text
        div(class='form-inline player-input-form')
          div#form-container(class='form-group')
            input(autocomplete='off' class='form-control' style='margin-right: 5px')
          button(class='btn btn-primary') Send
      div(class='row')
        h4 Player Actions
  