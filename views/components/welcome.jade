button(type='button' class='btn btn primary' data-toggle='modal' data-target='#welcome-modal') launch welcome

div#welcome-modal(class='modal fade' role='dialog')
    div(class='modal-dialog')
        div(class='modal-content')
            div(class='modal-header')
                h4(class='modal-title') Welcome to Clueless!
            div(class='modal-body')
                div(class='form-group')
                    label(for='character-select') Select a Character
                    select#character-options(class='form-control')
                        each character in characters
                            option #{character}
            div(class='modal-footer')
                div(class='row')
                    span#waiting-message(class='col-md-12 waiting-message') Waiting for at least 3 Players
                div(class='row')
                    div(class='col-md-6')
                        button#select-character(class='btn btn-primary pull-left') Select Character
                    div(class='col-md-6')
                        button(class='btn btn-success', data-dismiss='modal', disabled='true') Start Game